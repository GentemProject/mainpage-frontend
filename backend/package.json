{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "clean": "rm -rf ./build",
    "dev": "tsc-watch --onSuccess \"node build/app.js\"",
    "format": "prettier --write \"src/**/*.ts\" --write \"package.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" --check \"package.json\"",
    "start": "node ./src/app.ts",
    "migrate:all": "ts-node src/scripts/migrateCauses.ts && ts-node src/scripts/migrateOrgs.ts"
  },
  "dependencies": {
    "apollo-server-express": "^2.18.2",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.656.0",
    "aws-serverless-express": "^3.3.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "envalid": "^6.0.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.0",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "slugify-mongoose": "^1.0.2",
    "tsc-watch": "^4.2.3",
    "typescript": "^4.0.3",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.51",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^13.11.1",
    "@types/pino": "^6.3.3",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "graphql-import": "^1.0.2"
  }
}
